{
  "datasets_root": "c:\\Users\\pemar\\Documents\\My Projects\\DrukFarm\\ai_services\\myDatasets",
  "output_dir": "c:\\Users\\pemar\\Documents\\My Projects\\DrukFarm\\ai_services\\dataset_analysis_output",
  
  "analysis_settings": {
    "samples_per_class": 20,
    "max_quality_check_images": 1000,
    "enable_perceptual_hashing": true,
    "enable_quality_assessment": true,
    "export_samples": true
  },
  
  "image_extensions": [".jpg", ".jpeg", ".png", ".bmp", ".tiff", ".tif", ".webp"],
  
  "quality_thresholds": {
    "min_width": 50,
    "min_height": 50,
    "max_width": 5000,
    "max_height": 5000,
    "min_aspect_ratio": 0.2,
    "max_aspect_ratio": 5.0,
    "min_brightness": 20,
    "max_brightness": 235,
    "blur_threshold": 100
  },
  
  "label_analysis": {
    "keywords": [
      "blight", "spot", "rust", "rot", "mold", "mildew", "wilt",
      "mosaic", "curl", "scorch", "healthy", "disease", "leaf",
      "bacterial", "fungal", "viral", "nutrient", "pest"
    ],
    "ignore_folders": [
      "train", "test", "val", "validation", "images", "data"
    ]
  },
  
  "duplicate_detection": {
    "md5_hash": true,
    "perceptual_hash": true,
    "hamming_distance_threshold": 5
  },
  
  "output_formats": {
    "csv": true,
    "json": false,
    "excel": false
  },
  
  "datasets": {
    "BPLD Dataset": {
      "description": "Bean Plant Leaf Disease Dataset",
      "priority": "high"
    },
    "New Plant Diseases Dataset(Augmented)": {
      "description": "PlantVillage augmented dataset",
      "priority": "high"
    },
    "Rice Dataset": {
      "description": "Rice plant diseases",
      "priority": "medium"
    },
    "Sugarcane Leaf Disease Dataset": {
      "description": "Sugarcane diseases",
      "priority": "medium"
    }
  },
  
  "notes": [
    "This configuration file allows advanced customization",
    "Modify thresholds based on your specific requirements",
    "Set enable_perceptual_hashing to false for faster processing",
    "Increase max_quality_check_images for thorough quality assessment"
  ]
}
